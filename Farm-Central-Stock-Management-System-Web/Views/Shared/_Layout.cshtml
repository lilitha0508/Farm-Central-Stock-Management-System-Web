<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Farm Central Stock Management System</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <nav class="navbar navbar-expand-lg" >
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    @Html.ActionLink("Farm Central Stock Management System", "Index", "Home", null, new { @class = "navbar-brand" })
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Farmers", "Index", "Farmers")</li>
                        <li>@Html.ActionLink("Employees", "Index", "Employees")</li>
                        <li>@Html.ActionLink("Products", "Index", "Products")</li>
                        <li>@Html.ActionLink("ProductTypes", "Index", "ProductTypes")</li>
                    </ul>
                    <ul class="nav navbar-right" style="color:white">

                        @if (Session["username"] != null)
                        {
                            <h4 style="color: white"> What's Good @Session["username"]</h4>
                            @Html.ActionLink("Logout", "Logout", "Login")
                        }
                        else
                        {
                            @Html.Partial("_LoginPartial")
                        }
                    </ul>
                    </div>
                </div>
            </div>
</nav>
   <div class="container">
       @RenderBody()
   </div>
</body>
</html>
